{
  "job_search": {
    "keywords": [
      "data engineer",
      "software engineer",
      "product manager"
    ],
    "locations": [
      "San Francisco",
      "Charlotte",
      "Atlanta",
      "New York",
      "Remote"
    ],
    "max_jobs_per_search": 5,
    "delay_between_requests": 3,
    "search_filters": {
      "experience_level": ["entry", "mid","intern","new grad"],
      "job_type": ["full-time", "contract"],
      "posted_within": "24h"
    }
  },
  "career_sites": {
    "linkedin": {
      "enabled": false,
      "priority": 1,
      "max_pages": 2
    },
